# Application
NODE_ENV=development
LOG_LEVEL=debug
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/whatsapp_notifications
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT_URL=http://localhost:4566

# SQS
SQS_QUEUE_URL=http://localhost:4566/000000000000/whatsapp-notifications-queue
SQS_DLQ_URL=http://localhost:4566/000000000000/whatsapp-notifications-dlq

# WhatsApp Business API
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=your_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here

# Rate Limiting
RATE_LIMIT_TENANT_PER_MINUTE=100
RATE_LIMIT_RECIPIENT_PER_HOUR=10
RATE_LIMIT_RECIPIENT_PER_DAY=50

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_BASE_DELAY_SECONDS=60
RETRY_MAX_DELAY_SECONDS=3600

# API Security
API_KEY_SALT_ROUNDS=10
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=24h

# Monitoring
SENTRY_DSN=
PROMETHEUS_PORT=9090
